{
  "name": "supplyline-mro-suite-pwa",
  "version": "3.6.0",
  "description": "SupplyLine MRO Suite - Progressive Web Application with Supabase Backend",
  "author": "SupplyLine MRO Suite",
  "homepage": "./",
  "private": true,
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "npm run frontend:build && npm run server:build",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "server:build": "node scripts/build-portable-server.js",
    "serve": "node server/portable-server.js",
    "serve:dev": "concurrently \"npm run frontend:dev\" \"npm run serve\"",
    "build:portable": "npm run build && npm run package:portable",
    "package:portable": "node scripts/package-portable.js",
    "clean": "rimraf dist frontend/dist server/dist",
    "test": "cd frontend && npm run test",
    "lint": "cd frontend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.1",
    "express": "^4.18.2",
    "serve-static": "^1.15.0",
    "open": "^8.4.0"
  }
}
